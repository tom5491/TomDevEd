<aura:component implements="flexipage:availableForAllPageTypes">
    <aura:attribute name="val" type="Integer" default="1" />
    <lightning:card class="slds-card_boundary">
        <aura:set attribute="title"> Rate a Joke </aura:set>
        <aura:set attribute="actions"> </aura:set>
        <lightning:layout multipleRows="true">
            <lightning:layoutItem size="12">
                <div class="slds-p-around_small">
                    <!-- <p>"{!v.currentJoke}"</p> -->
                    <p>A bear walks into a bar and says, “Give me a whiskey and … cola.”</p>
                    <p>“Why the big pause?” asks the bartender. The bear shrugged. “I’m not sure; I was born with them.”</p>
                </div>
                <br />
                <div class="slds-p-around_small">
                    <lightning:slider class="rangeHidden" label="Rating" value="{!v.val}" min="1" max="10" />
                    <lightning:input type="checkbox" label='Nominate for cheesiest, worst or "Dad"-est joke.' />
                </div>
            </lightning:layoutItem>
        </lightning:layout>
        <aura:set attribute="footer">
            <div class="slds-float_clearfix" style="height: 40px">
                <div class="slds-float_right">
                    <lightning:button label="Submit" />
                </div>
            </div>
        </aura:set>

        <lightning:card class="slds-p-around_small" title="Past Jokes"> </lightning:card>
    </lightning:card>
</aura:component>

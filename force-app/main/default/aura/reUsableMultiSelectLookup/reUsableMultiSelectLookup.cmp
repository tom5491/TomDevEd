<aura:component controller="reUsableMultiSelectLookupCtrl" implements="flexipage:availableForAllPageTypes,force:hasRecordId">
    
    <!--declare attributes--> 
    <aura:attribute name="lstSelectedRecords" type="sObject[]" default="[]" description="Use to store SELECTED sObject Records"/>
    <aura:attribute name="listOfSearchRecords" type="List" description="Use to store the list of search records that is returned from apex class"/>
    <aura:attribute name="SearchKeyWord" type="string"/>
    <aura:attribute name="objectAPIName" type="string" default="Account"/>
    <aura:attribute name="IconName" type="string" default="standard:account"/>
    <aura:attribute name="label" type="string" default=""/>
    <aura:attribute name="editMode" type="boolean" default="false"/>
    
    <!--declare events hendlers-->  
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    <aura:handler name="oSelectedRecordEvent" event="c:selectedsObjectRecordsEvent" action="{!c.handleComponentEvent}"/>
    <aura:attribute name="Message" type="String" default=""/>
    
    <!-- https://www.lightningdesignsystem.com/components/lookups/ --> 
    <lightning:card title="Colleagues" footer="">
        <aura:set attribute="actions">
            <aura:if isTrue="{!v.editMode == false}">
                <lightning:button variant="brand" label="Add/Remove" title="Brand action" onclick="{!c.addRemove}" />
            </aura:if>
        </aura:set>
        <div onmouseleave="{!c.onblur}" aura:id="searchRes" class="slds-form-element slds-lookup slds-is-close">
            <lightning:spinner class="slds-show slds-hide" variant="brand" size="medium" aura:id="mySpinnerAll"/>
            <label class="slds-form-element__label">{!v.label}</label>
            <!--This part is for display search bar for lookup-->  
            <div class="slds-form-element__control">
                <div class="slds-input-has-icon slds-input-has-icon--right">
                    <!-- This markup is for when an record is selected -->
                    <div aura:id="lookup-pill" class="slds-pill-container slds-p_large">
                        <div aura:id="lookupField" class="slds-combobox__form-element slds-input-has-icon slds-input-has-icon_right slds-align_absolute-center"  style="width: 100%;">
                            <aura:if isTrue="{!v.editMode}">
                                <ui:inputText click="{!c.onfocus}"
                                              updateOn="keyup"
                                              keyup="{!c.keyPressController}"
                                              class="slds-lookup__search-input slds-input inputSize"
                                              value="{!v.SearchKeyWord}"
                                              placeholder="Search.."
                                              disabled="{!v.editMode == false}"/>
                            
                                <span class="slds-icon_container slds-icon-utility-search slds-input__icon slds-input__icon_right slds-p-right_large">
                                    <lightning:icon iconName="utility:search" size="x-small" alternativeText="icon"/>
                                </span>
                            </aura:if>
                        </div> 
                        <!--Selected Records Pills Section-->
                        <aura:iteration items="{!v.lstSelectedRecords}" var="sr">
                            <lightning:pill class="slds-m-around_xx-small" label="{!sr.Name}" name="{!sr.Id}" onremove="{!c.clear}" href="{!'/' + sr.Id}">
                                <aura:set attribute="media">
                                    <lightning:icon iconName="{!v.IconName}" size="x-small" alternativeText="icon"/>
                                </aura:set>
                            </lightning:pill>
                        </aura:iteration>
                    </div>
                </div>
            </div>
            
            <!--This part is for Display typehead lookup result List-->  
            <ul style="min-height:40px;margin-top:0px !important" class="slds-listbox slds-listbox_vertical slds-dropdown slds-dropdown_fluid slds-lookup__menu slds" role="listbox">
                <lightning:spinner class="slds-hide" variant="brand" size="small" aura:id="mySpinner"/>
                <center> {!v.Message}</center>
                <aura:iteration items="{!v.listOfSearchRecords}" var="singleRec">
                    <!--Child Component--> 
                    <c:reUsableMultiSelectLookupResult oRecord="{!singleRec}" IconName="{!v.IconName}"/>
                </aura:iteration>
            </ul>
        </div>
        <aura:if isTrue="{!v.editMode}">
            <hr style="height:1px;border-width:0;color:gray;background-color:gray"/>
            <div class="slds-align_absolute-center">
                <lightning:button variant="brand" label="Cancel" title="Brand action" onclick="{!c.handleClose}" />
                <lightning:button variant="brand" label="Save" title="Brand action" onclick="{!c.handleSave}" />
            </div>
        </aura:if>
    </lightning:card>
</aura:component>